<div class="bg-gray-100 p-6 rounded-md shadow-md max-w-md mx-auto mt-8">
  <h2 class="text-2xl font-bold mb-4">Edit Category</h2>

  <%= form_with model: @category, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 p-2 border rounded-md w-full" %>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :description, class: "mt-1 p-2 border rounded-md w-full" %>
    </div>

    <div>
      <%= f.submit "Update Category", class: "px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      <%= link_to "Back to Category Index", categories_path, class: "text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700" %>
    </div>
  <% end %>
</div>
