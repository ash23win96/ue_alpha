<div class="max-w-2xl mx-auto mt-8">
  <h1 class="text-3xl font-bold mb-4">Showing All Categories</h1>

  <div class="grid grid-cols-1 gap-4">
    <% @categories.each do |category| %>
      <div class="bg-gray-100 p-4 rounded-md shadow-md">
        <%= link_to category, class: "text-blue-500 hover:underline" do %>
          <span class="font-bold text-lg block mb-2"><%= category.name %></span>
        <% end %>
      </div>
    <% end %>
  </div>

  <% if user_signed_in? %>
    <div class="my-4 text-center">
      <%= link_to "Create New Category", new_category_path, class: "text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700" %>
    </div>
  <% end %>
</div>
