<div class="bg-gray-100 p-4 rounded-md shadow-md">
  <h2 class="text-2xl font-bold mb-2">Product Details</h2>
  <div class="mb-2">
    <span class="font-bold">Name:</span>
    <%= @product.name %>
  </div>
  <div class="mb-2">
    <span class="font-bold">Category:</span>
    <%= @product.category.name %>
  </div>
  <div class="mb-2">
    <span class="font-bold">Description:</span>
    <%= @product.description %>
  </div>
  <div>
    <span class="font-bold">Price:</span>
    <%= @product.price %>
  </div>
</div>

<div class="my-4 text-center">
      <%= link_to "Products", products_path, class: "text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700" %>
</div>
