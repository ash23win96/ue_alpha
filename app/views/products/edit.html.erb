<div class="bg-gray-100 p-6 rounded-md shadow-md max-w-md mx-auto mt-8">
  <h2 class="text-2xl font-bold mb-4">Edit Product</h2>

  <%= form_with model: @product, html: { class: "max-w-sm mx-auto" } do |f| %>
    <div class="mb-5">
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 p-2 border rounded-md w-full" %>
    </div>

    <div class="mb-5">
      <%= f.label :category, class: "block text-sm font-medium text-gray-700" %>
      <%= f.collection_select :category_id, @categories, :id, :name, { prompt: "Select a category" }, class: "mt-1 p-2 border rounded-md w-full" %>
    </div>

    <div class="mb-5">
      <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description, class: "mt-1 p-2 border rounded-md w-full" %>
    </div>

    <div class="mb-5">
      <%= f.label :price, class: "block text-sm font-medium text-gray-700" %>
      <%= f.number_field :price, step: 0.01, class: "mt-1 p-2 border rounded-md w-full" %>
    </div>

    <div class="mb-5">
      <%= f.label :image, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.file_field :image, class: "w-full" %>
    </div>

    <div class="mb-5 ">
      <%= f.submit 'Update Product', class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
      <%= link_to "Back to Products", products_path, class: "text-white bg-gray-800 hover:bg-gray-900 focus:outline-none focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-gray-700 dark:border-gray-700" %>
    </div>
  <% end %>
</div>