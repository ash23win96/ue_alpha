<h2 class="text-3xl font-bold mb-6">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "max-w-md mx-auto" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-4">
    <%= f.label :email, class: "block text-sm font-semibold text-gray-600 mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-md appearance-none focus:outline-none focus:border-blue-500" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="mb-4">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="mb-4">
    <%= f.label :password, class: "block text-sm font-semibold text-gray-600 mb-2" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-md appearance-none focus:outline-none focus:border-blue-500 mt-1" %>
    <% if @minimum_password_length %>
      <br />
      <em class="text-xs"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="mb-4">
    <%= f.label :password_confirmation, class: "block text-sm font-semibold text-gray-600 mb-2" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border rounded-md appearance-none focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :current_password, class: "block text-sm font-semibold text-gray-600 mb-2" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border rounded-md appearance-none focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="mb-6">
    <%= f.submit "Update", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline-blue active:bg-blue-800" %>
  </div>
<% end %>

<h3 class="text-lg font-semibold mb-2">Cancel my account</h3>

<div class="mb-4">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-500 hover:text-red-700" %></div>

<%= link_to "Back", :back, class: "text-blue-500 hover:text-blue-700" %>
